nextflow_process {

    name "Test Process QUAST_METAQUAST"
    script "../main.nf"
    process "QUAST_METAQUAST"

    tag "modules"
    tag "modules_nfcore"
    tag "quast"
    tag "metaquast"

    test("metaquast - single assembly") {

        when {
            process {
                """
                input[0] = [
                    [ id: 'test', assembler: 'megahit' ], 
                    file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/fasta/contigs.fasta', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert path(process.out.qc[0]).list().size() > 0 },
                { assert path(process.out.report[0]).exists() },
                { assert snapshot(
                    process.out.report,
                    process.out.versions
                    ).match() }
            )
        }
    }

    test("metaquast - should fail when assembly file is missing") {
        
        when {
            process {
                """
                input[0] = [
                    [ id: 'test', assembler: 'megahit' ],
                    file('non_existent_assembly.fasta')
                ]
                """
            }
        }

        then {
            assert process.failed
        }
    }

    test("metaquast - stub") {

        options '-stub'

        when {
            process {
                """
                input[0] = [
                    [ id: 'test', assembler: 'megahit' ],
                    file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/fasta/contigs.fasta', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }
}