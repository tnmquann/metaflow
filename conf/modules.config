// conf/modules.config
process {
    withName: 'FASTQC_RAW' {
        publishDir = [
            [
                path: { "${params.qc_raw_dir}/${meta.id}" },
                mode: 'copy',
                pattern: "*_fastqc.{html,zip}"
            ],
            [
                path: { "${params.qc_raw_dir}" },
                mode: params.publish_dir_mode,
                pattern: "versions.yml"
            ]
        ]
    }

    // withName: 'MULTIQC_RAW' {
