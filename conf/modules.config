// conf/modules.config
process {
    withName: 'MERGE_PAIREDENDSEQS' {
        label = 'process_low'
        conda = "${projectDir}/env/read_based.yaml"
    }
    
    withName: 'SOURMASH_MANYSKETCH' {
        label = 'process_medium'
        conda = "${projectDir}/env/read_based.yaml"
    }
    
    withName: 'SOURMASH_FASTMULTIGATHER' {
        label = 'process_high'
        conda = "${projectDir}/env/read_based.yaml"
    }
    
    withName: 'YACHT_RUN' {
        label = 'process_high'
        conda = "${projectDir}/env/read_based.yaml"
    }
    
    withName: 'PROCESS_READBASED_RESULTS' {
        label = 'process_medium'
        conda = "${projectDir}/env/read_based.yaml"
    }

    withName: 'FASTQC_RAW' {
        publishDir = [
            [
                path: { "${params.qc_raw_dir}/${meta.id}" },
                mode: 'copy',
                pattern: "*_fastqc.{html,zip}"
            ]
        ]
    }

    // withName: 'MULTIQC_RAW' {
