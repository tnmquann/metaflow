    withName: 'FASTP' {
        publishDir = [
            [
                path: { "${params.trim_dir}/${meta.id}" },
                mode: 'copy',
                pattern: "*.fastq.gz"
            ],
            [
                path: { "${params.trim_dir}/${meta.id}/report" },
