            [
                path: { "${params.trim_dir}" },
                mode: params.publish_dir_mode,
                pattern: "versions.yml"
            ]
        ]
    }

    withName: 'FASTQC_TRIMMED' {
        publishDir = [
            [
                path: { "${params.qc_trim_dir}/${meta.id}" },
                mode: 'copy',
                pattern: "*_fastqc.{html,zip}"
            ],
            [
                path: { "${params.qc_trim_dir}" },
                mode: params.publish_dir_mode,
                pattern: "versions.yml"
            ]
        ]
    }

    // withName: 'MULTIQC_TRIMMED' {
